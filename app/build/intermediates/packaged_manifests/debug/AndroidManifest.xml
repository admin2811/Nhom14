            android:theme="@style/Theme.EnglishLearning" />
        <activity
            android:name="com.englishtlu.english_learning.authentication.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.englishtlu.english_learning.authentication.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.englishtlu.english_learning.authentication.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name="com.englishtlu.english_learning.main.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.englishtlu.english_learning.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


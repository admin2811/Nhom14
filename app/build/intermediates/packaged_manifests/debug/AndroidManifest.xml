            android:authorities="com.englishtlu.english_learning.file-provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.englishtlu.english_learning.main.document.activity.PDFActivity"
            android:exported="false" />
        <activity
            android:name="com.englishtlu.english_learning.main.chatbot.ChatBotActivity"
            android:exported="false"
